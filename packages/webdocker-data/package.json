{
  "name": "@webdocker/data",
  "version": "1.0.0",
  "description": "@webdocker/data is a js lib for webdocker,used for communication",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest",
    "build": "rm -rf lib && tsc -p tsconfig.build.json",
    "watch": "tsc -w"
  },
  "keywords": [
    "microfrontends",
    "micro-frontends",
    "webdocker"
  ],
  "author": "xujun",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.1.2",
    "jest": "^29.1.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/dist/"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "<rootDir>/**/tests/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/fixtures/"
    ],
    "transform": {
      "^.+\\.ts$": "<rootDir>/node_modules/ts-jest"
    }
  }
}
