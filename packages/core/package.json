  "author": "xujun",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/jsdom": "^20.0.0",
    "@types/lodash": "^4.14.184",
    "cross-env": "^7.0.3",
    "jest": "^25.2.2",
